# Sudosh Configuration File
logdir                  = <%= @logdir %>
default shell           = <%= @defaultshell %>
delimiter               = -
syslog.priority         = LOG_NOTICE
syslog.facility         = LOG_DAEMON

# Allow Sudosh to execute -c arguements?  If so, what?
-c arg allow = scp
-c arg allow = sftp
-c arg allow = /usr/libexec/openssh/sftp-server
